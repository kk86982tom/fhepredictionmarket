{
  "name": "fhe-prediction-market",
  "version": "1.0.0",
  "description": "FHE Prediction Market using ZAMA FHEVM 0.8.0 with Polymarket price sync",
  "scripts": {
    "dev": "cd frontend && npm run dev",
    "compile": "hardhat compile",
    "test": "hardhat test --no-compile",
    "deploy:custom": "hardhat run scripts/deployWithCustomMarkets.js --network sepolia",
    "deploy:local": "hardhat run scripts/deploy.js --network localhost",
    "deploy:sepolia": "hardhat run scripts/deploy.js --network sepolia",
    "node": "hardhat node",
    "setup": "npm install && cd frontend && npm install",
    "fluctuate": "node scripts/autoPriceFluctuation.js",
    "sync": "node scripts/syncPolymarket.js",
    "fetch-markets": "node scripts/fetchCLOBMarkets.js",
    "build": "cd frontend && npm run build"
  },
  "keywords": [
    "prediction-market",
    "fhe",
    "zama",
    "blockchain",
    "polymarket",
    "privacy"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "^20.0.0",
    "chai": "^4.3.0",
    "hardhat": "^2.22.0",
    "hardhat-gas-reporter": "^1.0.0",
    "solidity-coverage": "^0.8.0",
    "ts-node": "^10.9.0",
    "typechain": "^8.3.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.0",
    "fhevmjs": "^0.5.0",
    "dotenv": "^16.4.0",
    "ethers": "^6.11.0",
    "axios": "^1.6.0"
  }
}